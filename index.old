const express = require ('express');
const bodyParser = require('body-parser');
const path = require('path');

const routes = require('./queries/src/routes');

const app = express();

const port = 3333;

// Use the set() method to store values
app.set('port', process.env.PORT || port)

// Set EJS engine as the default engine
app.set('view engine', 'ejs')

//Usar json em todas as requisições
app.use(bodyParser.json())
app.use(
  bodyParser.urlencoded({
    extended: true,
  })
);
app.use(express.static(path.join(__dirname, 'public')));

app.use(routes);

app.listen(app.settings.port, () => {
    console.log(`Aplicação executando na porta ${app.settings.port}. Pressione CTRL+C para parar o Servidor`)
  });
